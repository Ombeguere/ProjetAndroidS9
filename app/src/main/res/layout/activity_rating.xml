<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RatingActivity">

    <TextView
        android:id="@+id/text_rating_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Noter l'annonce :"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/text_annonce_adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        tools:text="Adresse de l'annonce ici" />

    <RatingBar
        android:id="@+id/rating_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <!-- Nouveau champ pour le commentaire -->
    <EditText
        android:id="@+id/comment_input"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="Laisser un commentaire..."
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:padding="8dp"
        android:background="@drawable/edittext_background"
        android:layout_marginBottom="24dp"/>

    <Button
        android:id="@+id/btn_submit_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Soumettre la note"/>

    <Button
        android:id="@+id/btn_back"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Retour / Annuler"
        android:textColor="@color/black"/>
</LinearLayout>
